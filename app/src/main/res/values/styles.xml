<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="alpha_anim">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>

    <declare-styleable name="GalleryRecyclerView">
        <attr name="helper" format="string">
            <enum name="LinearSnapHelper" value="0" />
            <enum name="PagerSnapHelper" value="1" />
        </attr>
    </declare-styleable>

</resources>
